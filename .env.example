# OpenAI API (required for LangChain)
OPENAI_API_KEY=sk-your-openai-api-key-here

# MCP Configuration
MCP_HOST=http://backend:8000
MCP_DEBUG=true

# Frontend URLs (for development)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_MCP_WS=http://localhost:8000/api/events

# Database (optional - for persistent movie metadata)
DATABASE_URL=postgresql://postgres:postgres@db:5432/movies
POSTGRES_DB=movies
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# FAISS Configuration
FAISS_INDEX_PATH=/app/data/movie_index.faiss
EMBEDDING_MODEL=all-mpnet-base-v2
EMBED_DIM=768

# Application Settings
DEBUG=true
LOG_LEVEL=INFO
MAX_DEBATE_ROUNDS=5
MAX_TURNS_PER_ROUND=6
SESSION_TIMEOUT=3600

# Security (for production)
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Performance
FAISS_NPROBE=10
VECTOR_SEARCH_K=5
LLM_TIMEOUT=30 